<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.awesomeness.christine.ec327project.gamelisttwoplayer"
    android:background="@drawable/background">

    <!--************************************


    ACTIVITY SCREEN FOR LIST OF GAMES


************************************-->

    <!--"Pick a Game"-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gamelisttitle"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/games" />



    <!--************************************-->

    <!--List of games to Pick from-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">

        <!--Tic Tac Toe button-->
        <!--when clicked, it should direct to activity_tictactoe screen-->

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ticbutton2"
            android:src="@drawable/buttontictactoe"
            android:layout_gravity="center_horizontal"
            android:background="@null" />

        <!--Water Race button-->
        <!--when clicked, it should direct to activity_numbers screen-->

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/waterrace2"
            android:src="@drawable/buttonwaterfun"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</RelativeLayout>
