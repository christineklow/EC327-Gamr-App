<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.awesomeness.christine.ec327project.gamelisttwoplayer"
    android:background="@drawable/background">

    <!--************************************


    ACTIVITY SCREEN FOR LIST OF GAMES


************************************-->

    <!--"Pick a Game"-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gamelisttitle"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/games" />

    <!--************************************-->

    <!--List of games to Pick from-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/gamelisttitle"
        android:layout_marginTop="15dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <!--Tic Tac Toe button-->
            <!--when clicked, it should direct to activity_tictactoe screen-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Tic Tac Toe"
                android:id="@+id/ticbutton"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:textColor="#FFFFFF"
                android:typeface="normal"
                android:textSize="40sp"
                android:textAllCaps="false"/>

            <!--Numbers button-->
            <!--when clicked, it should direct to activity_numbers screen-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Numbers"
                android:id="@+id/numbersbutton"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:textColor="#FFFFFF"
                android:typeface="normal"
                android:textSize="40sp"
                android:textAllCaps="false"/>

            <!--Matching Pairs button-->
            <!--when clicked, it should direct to activity_numbers screen-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Matching Pairs"
                android:id="@+id/matching"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:textColor="#FFFFFF"
                android:typeface="normal"
                android:textSize="40sp"
                android:textAllCaps="false"/>

            <!--Water Race button-->
            <!--when clicked, it should direct to activity_numbers screen-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Water Gun Fun"
                android:id="@+id/waterrace"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:textColor="#FFFFFF"
                android:typeface="normal"
                android:textSize="40sp"
                android:textAllCaps="false"/>

            <!--Dont Push the button-->
            <!--when clicked, it should direct to activity_dontpush screen-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Push the Button"
                android:id="@+id/buttongame"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:textColor="#FFFFFF"
                android:typeface="normal"
                android:textSize="40sp"
                android:textAllCaps="false"/>

            <!--Simon Says-->
            <!--when clicked, it should direct to activity_simonsays screen-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Simon Says"
                android:id="@+id/simonsays"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:textColor="#FFFFFF"
                android:typeface="normal"
                android:textSize="40sp"
                android:textAllCaps="false"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
