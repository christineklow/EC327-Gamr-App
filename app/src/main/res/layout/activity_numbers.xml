<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.awesomeness.christine.ec327project.numbers"
    android:background="@drawable/background">


    <!--Numbers Title-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberstitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:src="@drawable/numbers" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <!--First Equation number-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:id="@+id/firstnum"
                android:textSize="50sp"
                android:textColor="#FFFFFF"
                android:typeface="normal" />

            <!--First Operation-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" + "
                android:id="@+id/firstoperation"
                android:textColor="#FFFFFF"
                android:typeface="normal"
                android:textSize="50sp" />

            <!--Second Equation number-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y"
                android:id="@+id/secondnum"
                android:textColor="#FFFFFF"
                android:typeface="normal"
                android:textSize="50sp" />

            <!--Operation 2-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" + "
                android:id="@+id/secondoperation"
                android:textColor="#FFFFFF"
                android:typeface="normal"
                android:textSize="50sp" />

            <!--Third Equation number-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Z"
                android:id="@+id/thirdnum"
                android:textColor="#FFFFFF"
                android:typeface="normal"
                android:textSize="50sp" />


            <!--Equal sign-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" = "
                android:id="@+id/equalsign"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:typeface="normal"
                android:textSize="50sp"
                android:textColor="#FFFFFF" />

            <!--Answer field-->

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/answerspace"

                android:textSize="50sp"/>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
