<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.awesomeness.christine.ec327project.numbers"
    android:background="@drawable/background">


    <!--Numbers Title-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberstitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:src="@drawable/numbers" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <!--First Equation number-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:id="@+id/firstnum"
                android:textSize="40sp"
                android:textColor="#FFFFFF"
                android:typeface="normal" />

            <!--First Operation-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" + "
                android:id="@+id/firstoperation"
                android:textColor="#FFFFFF"
                android:typeface="normal"
                android:textSize="40sp" />

            <!--Second Equation number-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y"
                android:id="@+id/secondnum"
                android:textColor="#FFFFFF"
                android:typeface="normal"
                android:textSize="40sp" />

            <!--Operation 2-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" + "
                android:id="@+id/secondoperation"
                android:textColor="#FFFFFF"
                android:typeface="normal"
                android:textSize="40sp" />

            <!--Third Equation number-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Z"
                android:id="@+id/thirdnum"
                android:textColor="#FFFFFF"
                android:typeface="normal"
                android:textSize="40sp" />


            <!--Equal sign-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" = "
                android:id="@+id/equalsign"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:typeface="normal"
                android:textSize="40sp"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!--Answer field-->

    </RelativeLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/answerspace"

        android:textSize="40sp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/enteranswer"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:id="@+id/enteranswer"
        android:textColor="#FFFFFF"
        android:typeface="normal"
        android:layout_alignBottom="@+id/answerspace"
        android:layout_alignRight="@+id/relativeLayout"
        android:layout_alignEnd="@+id/relativeLayout"
        android:background="#000000" />


</RelativeLayout>
