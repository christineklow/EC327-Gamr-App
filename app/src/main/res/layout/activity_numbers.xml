<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.awesomeness.christine.ec327project.numbers"
    android:background="@drawable/background">


    <!--Numbers Title-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberstitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:src="@drawable/numbers" />

    <!--First Equation number-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/firstnum"
        android:layout_alignTop="@+id/operation"
        android:layout_toLeftOf="@+id/operation"
        android:layout_toStartOf="@+id/operation"
        android:textSize="50sp"
        android:textColor="#FFFFFF"
        android:typeface="normal" />

    <!--Operation-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" + "
        android:id="@+id/operation"
        android:layout_alignTop="@+id/secondnum"
        android:layout_toLeftOf="@+id/secondnum"
        android:layout_toStartOf="@+id/secondnum"
        android:textColor="#FFFFFF"
        android:typeface="normal"
        android:textSize="50sp" />

    <!--Second Equation number-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y"
        android:id="@+id/secondnum"
        android:layout_alignTop="@+id/equalsign"
        android:layout_toLeftOf="@+id/equalsign"
        android:layout_toStartOf="@+id/equalsign"
        android:textColor="#FFFFFF"
        android:typeface="normal"
        android:textSize="50sp" />


    <!--Equal sign-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" = "
        android:id="@+id/equalsign"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:typeface="normal"
        android:textSize="50sp"
        android:textColor="#FFFFFF" />

    <!--Answer field-->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/answerspace"
        android:layout_toEndOf="@+id/equalsign"
        android:textSize="50sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/equalsign"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
