<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.awesomeness.christine.ec327project.tictactoe"
    android:background="@drawable/background">

    <!--Tic Tac Toe title-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tictacgrid"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/tictacgrid" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/space4" />

    <!--Tic Tac Toe Grid-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tictactoe"
        android:layout_below="@+id/space4"
        android:layout_centerHorizontal="true"
        android:src="@drawable/tictactoe" />

    <!--**********************************************************-->
    <!--implement JAVA portion to these buttons below-->

    <!--How the tic tac toe grid looks like

        1 | 2 | 3
       ___________
        4 | 5 | 6
       ___________
        7 | 8 | 9

        the numbers in the grid correspond to the button associated with it

    -->

    <!--Grid button 1-->
    <Button
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:text="New Button"
        android:id="@+id/tic1"
        android:layout_alignTop="@+id/tictacgrid"
        android:layout_alignLeft="@+id/tictacgrid"
        android:layout_alignStart="@+id/tictacgrid"
        android:layout_marginTop="39dp"
        android:visibility="invisible" />

    <!--Grid button 2-->
    <Button
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:text="New Button"
        android:id="@+id/tic2"
        android:visibility="invisible"
        android:layout_alignTop="@+id/tic1"
        android:layout_toRightOf="@+id/tic1"
        android:layout_toEndOf="@+id/tic1" />

    <!--Grid button 3-->
    <Button
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:text="New Button"
        android:id="@+id/tic3"
        android:visibility="invisible"
        android:layout_alignTop="@+id/tic2"
        android:layout_toRightOf="@+id/tic2"
        android:layout_toEndOf="@+id/tic2" />

    <!--Grid button 4-->
    <Button
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:text="New Button"
        android:id="@+id/tic4"
        android:visibility="invisible"
        android:layout_below="@+id/tic1"
        android:layout_alignLeft="@+id/tictacgrid"
        android:layout_alignStart="@+id/tictacgrid" />

    <!--Grid button 5-->
    <Button
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:text="New Button"
        android:id="@+id/tic5"
        android:visibility="invisible"
        android:layout_below="@+id/tic1"
        android:layout_toRightOf="@+id/tic4"
        android:layout_toEndOf="@+id/tic4" />

    <!--Grid button 6-->
    <Button
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:text="New Button"
        android:id="@+id/tic6"
        android:visibility="invisible"
        android:layout_below="@+id/tic2"
        android:layout_toRightOf="@+id/tic2"
        android:layout_toEndOf="@+id/tic2" />

    <!--Grid button 7-->
    <Button
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:text="New Button"
        android:id="@+id/tic7"
        android:visibility="invisible"
        android:layout_below="@+id/tic4"
        android:layout_alignLeft="@+id/tictacgrid"
        android:layout_alignStart="@+id/tictacgrid" />

    <!--Grid button 8-->
    <Button
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:text="New Button"
        android:id="@+id/tic8"
        android:visibility="invisible"
        android:layout_below="@+id/tic5"
        android:layout_toRightOf="@+id/tic7"
        android:layout_toEndOf="@+id/tic7" />

    <!--Grid button 9-->
    <Button
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:text="New Button"
        android:id="@+id/tic9"
        android:visibility="invisible"
        android:layout_below="@+id/tic5"
        android:layout_toRightOf="@+id/tic8"
        android:layout_toEndOf="@+id/tic8" />

    <!--**********************************************************-->
    <!--Game info displayed underneath tictactoe grid. Does not need connecting to java-->
    <Space
        android:layout_width="fill_parent"
        android:layout_height="30px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/space5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player: X
Computer: O"
        android:id="@+id/textView"
        android:layout_above="@+id/space5"
        android:layout_centerHorizontal="true"
        android:typeface="normal"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:gravity="center_horizontal" />

</RelativeLayout>
