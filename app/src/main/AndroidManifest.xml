<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.awesomeness.christine.ec327project" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.awesomeness.christine.ec327project.mainscreen"
            android:label="@string/app_name"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.awesomeness.christine.ec327project.gamelist"
            android:label="@string/title_activity_gamelist" >
            <intent-filter>
                <action android:name = "gamelist"/>
                <category android:name = "android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.awesomeness.christine.ec327project.tictactoe"
            android:label="@string/title_activity_tictactoe" >
            <intent-filter>
                <action android:name = "tictactoe"/>
                <category android:name = "android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.awesomeness.christine.ec327project.numbers"
            android:label="@string/title_activity_numbers" >
            <intent-filter>
                <action android:name = "numbers"/>
                <category android:name = "android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
